{
  "root": true,
  "env": {
    "es6": true,
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {},
  "plugins": [
    "flowtype",
    "import",
    "promise",
    "security",
    "prettier"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended",
    "plugin:flowtype/recommended",
    "prettier",
    "prettier/flowtype"
  ],
  "rules": {
    "import/no-extraneous-dependencies": "off",
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "none"
      }
    ]
  }
}
