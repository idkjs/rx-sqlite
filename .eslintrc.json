{
  "root": true,
  "env": {
    "es6": true,
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {},
  "plugins": [
    "flowtype",
    "import",
    "promise",
    "security"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended",
    "plugin:flowtype/recommended"
  ],
  "rules": {
    "semi": "error",
    "quotes": "error",
    "comma-dangle": "error",
    "import/no-extraneous-dependencies": "off"
  }
}
